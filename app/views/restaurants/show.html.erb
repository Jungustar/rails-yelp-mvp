<div class="container">
<h2><%= @restaurant.name %></h2>
<ul>
  <li><%= @restaurant.address %></li>
  <li><%= @restaurant.phone_number %></li>
  <li><%= @restaurant.category %></li>
</ul>
</div>

<div class="container">
<h2>Reviews</h2>

<% @restaurant.reviews.each do |review| %>
  <ul>
    <li>"<%= review.content %>" Rating: <%= review.rating %></li>
  </ul>
<% end %>

<%= link_to "Back to all restaurant", restaurants_path, class: "btn btn-secondary" %>
<%= link_to "Create a review", new_restaurant_review_path(@restaurant), class: "btn btn-secondary" %>
</div>
